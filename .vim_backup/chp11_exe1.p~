use strict;
use warnings;

{
	package Animal;
	sub speak {
		my $class = shift;
		print "A $class goes ", $class->sound, "\n";
	}
}

{
	package Cow;
	use vars qw(@ISA);
	@ISA = qw(Animal);
	sub sound {
		"moooo";
	}
}

Animal::speak('Cow');
