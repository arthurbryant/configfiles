DROP TABLE IF EXISTS store_pickup;
CREATE TABLE store_pickup (
    position   TINYINT(3) UNSIGNED NOT NULL,
    content_id INT(10)    UNSIGNED NOT NULL,
    PRIMARY KEY (position)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

DROP TABLE IF EXISTS store_top_banner;
CREATE TABLE store_top_banner (
    id         INT(10)      UNSIGNED AUTO_INCREMENT,
    link_url   VARCHAR(255) NOT NULL,
    image_url  VARCHAR(255) NOT NULL,
    PRIMARY KEY (id)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

DROP TABLE IF EXISTS store_character_top_banner;
CREATE TABLE store_character_top_banner (
    tag_id           INT(10) UNSIGNED NOT NULL,
    top_image_url    VARCHAR(255) NOT NULL,
    bottom_image_url VARCHAR(255) NOT NULL,
    bottom_link_url  VARCHAR(255) NOT NULL,
    bottom_text      TEXT NOT NULL,
    PRIMARY KEY (tag_id)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
