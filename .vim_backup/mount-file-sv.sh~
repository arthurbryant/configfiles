#!/bin/sh

test -d /Volumes/pub || umount /Volumes/pub
test -d /Volumes/pub-1 || umount /Volumes/pub-1
test -d /Volumes/pub-2 || umount /Volumes/pub-2

mkdir /Volumes/pub
mount -t smbfs //jun.morimoto@file-sv01/pub /Volumes/pub

mkdir /Volumes/pub-1
mount -t smbfs //jun.morimoto@file-sv02/pub /Volumes/pub-1

mkdir /Volumes/pub-2
mount -t smbfs //jun.morimoto@file-sv03/pub /Volumes/pub-2
