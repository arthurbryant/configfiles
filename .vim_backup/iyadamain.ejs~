        <script type="text/javascript">
        /* This function runs once the page is loaded, but appMobi is not yet active */
        var preroll=false;
        $.ui.autoLaunch=false;
        var init = function(){
          
        };
        document.addEventListener("DOMContentLoaded",init,false);  



        /* This code is used to run as soon as appMobi activates */
        var onDeviceReady=function(){
            AppMobi.device.setRotateOrientation("portrait");
            AppMobi.device.setAutoRotate(false);
            //hide splash screen
            AppMobi.device.hideSplashScreen();	
            
            
            if(preroll){
                AppMobiPromotion.getInterstitial();
            }
            $.ui.backButtonText = '<';
            $.ui.launch();
        };
        document.addEventListener("appMobi.device.ready",onDeviceReady,false);    


        $.extend({
            keys:    function(obj){
                var a = [];
                $.each(obj, function(k){ a.push(k) });
                return a;
            }
        });
        var iyadas = {};

        function getRes(){
            var url = '/iyada/res';
            if($('#yuck1').val()) iyadas[$('#yuck1').val()] = 1;
            if($('#yuck2').val()) iyadas[$('#yuck2').val()] = 1;
            var data = {iyada: $.keys(iyadas)};
            $.post(url,data,fillRes);
        }
        function getResAgain(){
            var url = '/iyada/res';
            if($('#recommend0').val()) iyadas[$('#recommend0').val()] = 1;
            if($('#recommend1').val()) iyadas[$('#recommend1').val()] = 1;
            if($('#recommend2').val()) iyadas[$('#recommend2').val()] = 1;
            var data = {iyada: $.keys(iyadas)};
            $.post(url,data,fillRes);
        }
        function fillRes(data){
            var json = JSON.parse(data);
            $('#recommends').empty();
            for( var i=0; i<3; i++ ){
                var res = json[i];
                var tmpl = [
                    "<fieldset>",
                        "<div class='info'>",
                            "<span>" + res.name + "</span><br>",
                            "<span>メイン：" + res.menu + "</span><br>",
                            "<span>価格：" + res.price + " 円</span><br>",
                            "<span>駅から " + parseInt(res.walktime) + " 分だよ</span><br>",
                                "<a href='#' class='button list'>ここにする</a>",
                        "</div>",
                        "<input type='hidden' id='recommend" + i + "' value='" + res.menu + "'/>",
                        "<img class='nail' src='/images/menu/" + res.imageUrl + "'/>",
                    "</fieldset>"
                    ].join('');
                $('#recommends').append($(tmpl));
            }
        }

        </script>

