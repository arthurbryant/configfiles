        $().ready(function(){
            
            var request = $.ajax({
                 url : "http://maps.googleapis.com/maps/api/directions/json?",
                  type: "POST",
                  data: {
                        origin : "東京都渋谷区東１丁目２−２０",
                        destination : "東京都渋谷区渋谷４−４−２５",
                        sensor : false,
                        mode : "walking"
                  },
                    dataType: "jsonp",
                });
                 
                request.done(function(msg) {
                      $("#log").html( msg );
                  });
                   
                  request.fail(function(jqXHR, textStatus) {
                        alert( "Request failed: " + textStatus );
                    });
        });
        </script>
