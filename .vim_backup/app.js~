
/**
 * Module dependencies.
 */

var express = require('express')
  , report = require('./routes/report')
  , bubble = require('./routes/bubble')
  , http = require('http')
  , path = require('path');

var lp = require('./routes/lp/index');
var iyada = {
    list   : require('./routes/iyada/list'),
    detail : require('./routes/iyada/detail')
};
//var report = require('./routes/report/report');

var app = express();

// all environments
app.set('port', process.env.PORT || 3877);
app.set('views', __dirname + '/views');
app.set('view engine', 'ejs');
app.use(express.favicon());
app.use(express.logger('dev'));
app.use(express.bodyParser());
app.use(express.methodOverride());
app.use(express.cookieParser('your secret here'));
app.use(express.session());
app.use(app.router);
app.use(express.static(path.join(__dirname, 'public')));

// development only
if ('development' == app.get('env')) {
  app.use(express.errorHandler());
}

app.get('/', lp.index);

app.get('/iyada/list', iyada.list.main);
app.post('/iyada/list/tracer', iyada.list.tracer);

app.get('/iyada/detail', iyada.detail.main);

app.get('/report/main', report.main);
app.get('/report/report', report.report);

app.post('/json/iyada/search', iyada.list.search);

http.createServer(app).listen(app.get('port'), function(){
  console.log('Express banana listening on port ' + app.get('port'));
});
