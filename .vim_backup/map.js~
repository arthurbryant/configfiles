(function(){
    function initialize() {
        // The location of Mixi
        var LATITUDE_OF_MIXI = 35.65802;
        var LONGITUDE_OF_MIXI = 139.708929;
        directionsDisplay = new google.maps.DirectionsRenderer();
        var mapOptions = {
            zoom: 15,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            center: new google.maps.LatLng(LATITUDE_OF_MIXI, LATITUDE_OF_MIXI)
        };
        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
        directionsDisplay.setMap(map);
        directionsDisplay.setPanel(document.getElementById('directions-panel'));

    }

    function calcRoute(from, to) {
        var request = {
            origin: from,
            destination: to,
            travelMode: google.maps.TravelMode.WALKING
        };
        directionsService.route(request, function(response, status) {
            if (status == google.maps.DirectionsStatus.OK) {
                directionsDisplay.setDirections(response);
                console.dir(response);
                console.dir(response.routes[0].legs[0].duration.text);
            }
        });
    }

    var directionsDisplay;
    var directionsService = new google.maps.DirectionsService();
    // From mixi
    var from = "東京都渋谷区渋谷４−４−２５";
    // To restaurant
    var to = "東京都渋谷区渋谷3-18-10 大野ビル2号館　 B1F";
    google.maps.event.addDomListener(window, 'load', initialize);
    google.maps.event.addDomListener(window, 'load', function() {
        calcRoute(from, to);
    });
})();
