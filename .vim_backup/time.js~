Namespace('jp.mixi.practice.pc.time')
.use('jp.co.mixi.lang.date formatTimeSpanAgo')
.define(function (ns){
    ns.provide({
        timer : function() {
            var start_time = new Date().getTime();
            $j(".clickMe").on("click", function(){
            var result = ns.formatTimeSpanAgo(start_time);
            alert(result);
            /*
            if(time < 60) {
                alert(result + " secs");
            }
            else if(time > 60 && time < 3600) {
                result = time / 60;
                alert(result + " mins");
            }
            else {
                result = time / 3600;
                alert(result + " hours");
            }
            */
        }
        );
        }
    });

});
