package Mixi::Cart;

use warnings;
use strict;

use feature qw(say);

sub new {
    my $class = shift;

    bless {}, $class;
}

sub add {
    my $self = shift;

    my $item = shift;
    my $amount = shift;
    $amount = 1 if(!$amount);

    $self->{"item"} = $item;
    $self->{"amount"} = $amount;
}

sub get_total {
    my $self = shift;

    my $total = 0;
    while( my ($k, $v) = each %$self ) {
        say $k, " => ", $v;
    my $item = Mixi::Item->new("pc", 50000);
        $total += $v;
    }
    return $total;
}
sub _prepare {
    say "prepare test";
}
sub execute {
    _prepare();
    say "execute test";
    return 2;
}

1;
